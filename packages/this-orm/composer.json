{
  "name": "this/orm",
  "description": "Database ORM for THIS framework",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,

  "require": {
    "php": "^8.2",
    "this/contracts": "dev-master",
    "this/output": "dev-master",
    "ext-pdo": "*"
  },

  "autoload": {
    "psr-4": {
      "This\\ORM\\": "src/"
    }
  },

  "repositories": [
    {
      "type": "path",
      "url": "../this-contracts",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "../this-output",
      "options": {
        "symlink": true
      }
    }
  ]
}
