{
  "name": "this/this",
  "description": "THIS framework monorepo",
  "type": "project",
  "license": "MIT",

  "minimum-stability": "dev",
  "prefer-stable": true,

  "require": {
    "php": "^8.2",

    "this/contracts": "*",
    "this/core": "*",
    "this/logger": "dev-main",
    "symfony/serializer-pack": "^1.3",
    "this/validator": "dev-main"
  },

  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "psalm/phar": "^5.0"
  },

  "repositories": [
    {
      "type": "path",
      "url": "packages/this-contracts",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "packages/this-core",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "packages/this-logger",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "packages/this-validator",
      "options": {
        "symlink": true
      }
    }
  ],

  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },

  "scripts": {
    "test": "phpunit",
    "psalm": "psalm"
  }
}
