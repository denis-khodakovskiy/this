{
  "name": "this/this",
  "description": "THIS framework monorepo",
  "type": "project",
  "license": "MIT",

  "minimum-stability": "dev",
  "prefer-stable": true,

  "require": {
    "php": "^8.2",

    "this/contracts": "*",
    "symfony/serializer-pack": "^1.3",
    "this/output": "dev-master",
    "this/template-engine": "dev-master"
  },

  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "psalm/phar": "^5.0",
    "fakerphp/faker": "^1.24"
  },

  "repositories": [
    {
      "type": "path",
      "url": "./packages/this-contracts",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "./packages/this-core",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "./packages/this-logger",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "./packages/this-validator",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "./packages/this-i18n",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "./packages/this-messenger",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "./packages/this-cache",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "./packages/this-controller",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "./packages/this-orm",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "./packages/this-output",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "./packages/this-template-engine",
      "options": {
        "symlink": true
      }
    }
  ],

  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },

  "scripts": {
    "test": "phpunit",
    "psalm": "psalm"
  }
}
